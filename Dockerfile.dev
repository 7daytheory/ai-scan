FROM node:20-alpine
WORKDIR /app

# Copy package files (both package.json and lockfile) first to leverage Docker cache
# Use npm ci for reproducible installs based on the lockfile
COPY package*.json ./
RUN npm ci

# Copy the rest of the source
COPY . .

# Expose Vite default dev port
EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host"]
